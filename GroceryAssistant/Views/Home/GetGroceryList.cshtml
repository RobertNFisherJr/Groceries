@model GroceryAssistant.Views.Home.GetGroceryList

<h1>Grocery List for @Model.Date.ToShortDateString()</h1>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Scalar</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
@foreach(GroceryItem item in Model.GroceryList)
{
    <tr><td>@item.product</td>
    <td>@item.qty</td>
    <td>@item.scalar</td>
    <td>@item.loc</td>
@*                <td>
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                </td>*@
                <td>
                    @using (Html.BeginForm("purchaseItem","Home"))
                    {
                        @Html.Hidden("id", item.id)
                        @Html.Hidden("date", Model.Date.ToShortDateString())
                        <button class="btn-outline-secondary" type="submit">Purchase</button>
                    }
                </td>
            </tr>
}

    </tbody>
</table>
<form>
    <button onclick="#">Email Grocery List</button>
</form>
